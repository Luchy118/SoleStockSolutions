@{
    ViewBag.Title = "Tu cuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>TU CUENTA</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">INICIO</a></li>
                    <li class="breadcrumb-item active">CUENTA</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start My Account  -->
<div class="my-account-box-main" style="@(Session["adminPerms"] != null && (bool)Session["adminPerms"] == true ? "display: flex; align-items: center;" : "")">
    <div class="container">
        <div class="my-account-page">
            <div class="row">
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-lg-4 col-md-12">
                        <div class="account-box m-0">
                            <div class="service-box">
                                <div class="service-icon">
                                    <a href="@Url.Action("Products", "AdminPanel")"><i class="fa fa-columns" aria-hidden="true"></i> </a>
                                </div>
                                <div class="service-desc">
                                    <h4>Panel de administración</h4>
                                    <p>Accede al panel de administración para gestionar usuarios, productos, pedidos, etc.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="account-box m-0">
                            <div class="service-box">
                                <div class="service-icon">
                                    <a href="@Url.Action("Settings")"><i class="fa fa-lock"></i> </a>
                                </div>
                                <div class="service-desc">
                                    <h4>Privacidad y seguridad</h4>
                                    <p>Modifica tu información de inicio de sesión, contraseña y preferencias de seguridad.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="account-box m-0">
                            <div class="service-box">
                                <div class="service-icon">
                                    <a onclick="popups.showConfirmLogOut()" style="color: #ffffff"> <i class="fa fa-sign-out" aria-hidden="true"></i> </a>
                                </div>
                                <div class="service-desc">
                                    <h4>Cerrar sesión</h4>
                                    <p>Finaliza seguramente tu sesión y protege tu cuenta de accesos no autorizados.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-4 col-md-12">
                        <div class="account-box">
                            <div class="service-box">
                                <div class="service-icon">
                                    <a href="@Url.Action("Orders")"> <i class="fas fa-truck"></i> </a>
                                </div>
                                <div class="service-desc">
                                    <h4>Tus Pedidos</h4>
                                    <p>Consulta, inicia una devolución o vuelve a comprar tus artículos de manera sencilla.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="account-box">
                            <div class="service-box">
                                <div class="service-icon">
                                    <a href="@Url.Action("Settings")"><i class="fa fa-lock"></i> </a>
                                </div>
                                <div class="service-desc">
                                    <h4>Ajustes y Seguridad</h4>
                                    <p>Modifica tu información de inicio de sesión, contraseña y preferencias de seguridad.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="account-box">
                            <div class="service-box">
                                <div class="service-icon">
                                    <a href="@Url.Action("Addresses")"> <i class="fa fa-location-arrow"></i> </a>
                                </div>
                                <div class="service-desc">
                                    <h4>Tus Direcciones</h4>
                                    <p>Modifica tus direcciones de envío y facturación y establece tus predeterminadas.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="account-box">
                            <div class="service-box">
                                <div class="service-icon">
                                    <a onclick="popups.showConfirmLogOut()" style="color: #ffffff"> <i class="fa fa-sign-out" aria-hidden="true"></i> </a>
                                </div>
                                <div class="service-desc">
                                    <h4>Cerrar sesión</h4>
                                    <p>Finaliza seguramente tu sesión y protege tu cuenta de accesos no autorizados.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- End My Account -->